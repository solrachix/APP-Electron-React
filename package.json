{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "main": "Electron.js",
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "concurrently": "^5.0.2",
    "dotenv": "^8.2.0",
    "exec": "^0.2.1",
    "find-free-port": "^2.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.0",
    "wait-on": "^3.3.0"
  },
  "scripts": {
    "start": "export $(cat .env | xargs) && concurrently \"set $PORT && BROWSER=none react-scripts start\" \"wait-on http://localhost:$PORT && electron --disable-gpu .\"",
    "buildReact": "react-scripts build",
    "buildElectron": "electron-packager . ${name} --overwrite --platform=linux --arch=x64 --prune=true --out=release-builds"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^9.4.0",
    "electron-packager": "^14.2.0"
  }
}
